---

<!DOCTYPE html>
<html lang={isEnglish ? "en" : "fr"}>

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title>{t.siteName} - {t.nav.home}</title>
  <meta name="description" content="Professional web design and development services">
  <meta name="keywords" content="web design, development, responsive, modern">

   
    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/img/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/assets/img/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
  
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect">
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Poppins:wght@300;400;500;600;700&family=Raleway:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="/assets/vendor/aos/aos.css" rel="stylesheet">
  <link href="/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
  <link href="/assets/css/main.css" rel="stylesheet">
</head>

<body class="index-page">

  <!-- Header -->
  <Header siteName={t.siteName} navItems={t.nav} />

  <!-- Language Switcher -->
  <LanguageSwitch currentLang={isEnglish ? "en" : "fr"} />

  <main class="main">

    <!-- Hero Section -->
    <section id="hero" class="hero section dark-background">
      <img src="/assets/img/hero-bg.jpg" alt="" data-aos="fade-in">

      <div class="container text-center" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <h2>{t.hero.title}</h2>
            <p>{t.hero.subtitle}</p>
            <a href="#about" class="btn-get-started">{t.hero.cta}</a>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about section">
      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <h2>{t.about.title}</h2>
        <p>{t.about.subtitle}</p>
      </div>

      <div class="container">
        <div class="row gy-4">
          <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
            <h3>{t.about.details}</h3>
            <img src="/assets/img/about.jpg" class="img-fluid rounded-4 mb-4" alt="">
            <p>{t.about.text1}</p>
            <p>{t.about.text2}</p>
          </div>
          <div class="col-lg-6" data-aos="fade-up" data-aos-delay="250">
            <div class="content ps-0 ps-lg-5">
              <ul>
                <li><i class="bi bi-check-circle-fill"></i> <span>Responsive web design that looks great on all devices</span></li>
                <li><i class="bi bi-check-circle-fill"></i> <span>Modern development practices using the latest technologies</span></li>
                <li><i class="bi bi-check-circle-fill"></i> <span>Search engine optimization to help your website rank higher</span></li>
              </ul>
              <p>
                We pride ourselves on delivering high-quality websites that not only look great but also perform
                exceptionally well. Our focus on user experience ensures that visitors to your site have a seamless
                experience that encourages them to engage with your brand.
              </p>

              <div class="position-relative mt-4">
                <img src="/assets/img/about-2.jpg" class="img-fluid rounded-4" alt="">
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
   
    <!-- Why Us Section -->
    <section id="why-us" class="why-us section text-center">
      <h2>{t.whyUs.title}</h2>
      <div class="container">
        <div class="row no-gutters">
          {t.whyUs.reasons.map((reason, index) => (
            <div class="col-lg-4 col-md-6 card" data-aos="fade-up" data-aos-delay={100 * (index + 1)}>
              <span>{reason.number}</span>
              <h4>{reason.title}</h4>
              <p>{reason.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Call To Action Section -->
    <section id="call-to-action" class="call-to-action section dark-background">
      <img src="/assets/img/cta-bg.jpg" alt="">

      <div class="container">
        <div class="row justify-content-center" data-aos="zoom-in" data-aos-delay="100">
          <div class="col-xl-10">
            <div class="text-center">
              <h3>{t.cta.title}</h3>
              <p>{t.cta.text}</p>
              <a class="cta-btn" href="#contact">{t.cta.button}</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="services section">
      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <span class="description-title">{t.services.title}</span>
        <h2>{t.services.title}</h2>
        <p>{t.services.subtitle}</p>
      </div>

      <div class="container">
        <div class="row gy-4">
          {t.services.items.map((service, index) => (
            <div class="col-xl-4 col-lg-6" data-aos="fade-up" data-aos-delay={100 * (index + 1)}>
              <div class="service-item d-flex">
                <div class="icon flex-shrink-0"><i class={`bi ${service.icon}`}></i></div>
                <div>
                  <h4 class="title"><a href="#" class="stretched-link">{service.title}</a></h4>
                  <p class="description">{service.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact section">
      <!-- Section Title -->
      <div class="container section-title" data-aos="fade-up">
        <span class="description-title">{t.contact.title}</span>
        <h2>{t.contact.title}</h2>
        <p>{t.contact.subtitle}</p>
      </div>

      <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="info-wrap" data-aos="fade-up" data-aos-delay="200">
          <div class="row gy-5">
            <div class="col-lg-4">
              <div class="info-item d-flex align-items-center">
                <i class="bi bi-geo-alt flex-shrink-0"></i>
                <div>
                  <h3>{isEnglish ? "Address" : "Adresse"}</h3>
                  <p>{t.contact.address}</p>
                </div>
              </div>
            </div>

            <div class="col-lg-4">
              <div class="info-item d-flex align-items-center">
                <i class="bi bi-telephone flex-shrink-0"></i>
                <div>
                  <h3>{isEnglish ? "Call Us" : "Appelez-Nous"}</h3>
                  <p>{t.contact.phone}</p>
                </div>
              </div>
            </div>

            <div class="col-lg-4">
              <div class="info-item d-flex align-items-center">
                <i class="bi bi-envelope flex-shrink-0"></i>
                <div>
                  <h3>{isEnglish ? "Email Us" : "Envoyez-Nous un Email"}</h3>
                  <p>{t.contact.email}</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <form action="/api/contact" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="300">
          <div class="row gy-4">
            <div class="col-md-6">
              <input type="text" name="name" class="form-control" placeholder={t.contact.form.name} required>
            </div>

            <div class="col-md-6">
              <input type="email" class="form-control" name="email" placeholder={t.contact.form.email} required>
            </div>

            <div class="col-md-12">
              <input type="text" class="form-control" name="subject" placeholder={t.contact.form.subject} required>
            </div>

            <div class="col-md-12">
              <textarea class="form-control" name="message" rows="6" placeholder={t.contact.form.message} required></textarea>
            </div>

            <div class="col-md-12 text-center">
              <div class="loading">{isEnglish ? "Loading" : "Chargement"}</div>
              <div class="error-message"></div>
              <div class="sent-message">{isEnglish ? "Your message has been sent. Thank you!" : "Votre message a été envoyé. Merci!"}</div>

              <button type="submit">{t.contact.form.send}</button>
            </div>
          </div>
        </form>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <Footer siteName={t.siteName} translation={t} isEnglish={isEnglish} />

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Preloader -->
  <div id="preloader"></div>

   
  
    <!-- Vendor JS Files -->
    <script is:inline src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script is:inline src="/assets/vendor/aos/aos.js"></script>
    <script is:inline src="/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script is:inline src="/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script is:inline src="/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script is:inline src="/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  
    <!-- Main JS File -->
    <script is:inline src="/assets/js/main.js"></script>

</body>
</html>