---
import "../styles/global.css";
import Header from "../assets/Header.astro";
import Footer from "../assets/Footer.astro";
interface Props {
    title?: string;
    subtitle?: string;
}

const { 
    title = "Said x Dimitri ",
    subtitle = "Discover amazing content and features"
} = Astro.props;
---

<div class="welcome-container">
    <div class="welcome-content">
        <h1>{title}</h1>
        <p class="subtitle">{subtitle}</p>
        
        <div class="features">
            <div class="feature-card">
                <span class="icon">🚀</span>
                <h3>Fast Performance</h3>
                <p>Built with speed and efficiency in mind</p>
            </div>
            <div class="feature-card">
                <span class="icon">🛠️</span>
                <h3>Easy to Use</h3>
                <p>Simple and intuitive interface</p>
            </div>
            <div class="feature-card">
                <span class="icon">🎨</span>
                <h3>Beautiful Design</h3>
                <p>Modern and responsive layout</p>
            </div>
        </div>

        <div class="cta-buttons">
            <a href="/get-started" class="btn primary">Get Started</a>
            <a href="/learn-more" class="btn secondary">Learn More</a>
			<Footer/>
        </div>
    </div>
</div>
