---
interface Props {
    title?: string;
    subtitle?: string;
}

const { 
    title = "Welcome to Our Website",
    subtitle = "Discover amazing content and features"
} = Astro.props;
---

<div class="welcome-container">
    <div class="welcome-content">
        <h1>{title}</h1>
        <p class="subtitle">{subtitle}</p>
        
        <div class="features">
            <div class="feature-card">
                <span class="icon">üöÄ</span>
                <h3>Fast Performance</h3>
                <p>Built with speed and efficiency in mind</p>
            </div>
            <div class="feature-card">
                <span class="icon">üõ†Ô∏è</span>
                <h3>Easy to Use</h3>
                <p>Simple and intuitive interface</p>
            </div>
            <div class="feature-card">
                <span class="icon">üé®</span>
                <h3>Beautiful Design</h3>
                <p>Modern and responsive layout</p>
            </div>
        </div>

        <div class="cta-buttons">
            <a href="/get-started" class="btn primary">Get Started</a>
            <a href="/learn-more" class="btn secondary">Learn More</a>
        </div>
    </div>
</div>

<style>
    .welcome-container {
        padding: 4rem 2rem;
        text-align: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    .welcome-content h1 {
        font-size: 3rem;
        color: #2d3748;
        margin-bottom: 1rem;
    }

    .subtitle {
        font-size: 1.25rem;
        color: #4a5568;
        margin-bottom: 3rem;
    }

    .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin: 3rem 0;
    }

    .feature-card {
        padding: 2rem;
        background: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .feature-card h3 {
        color: #2d3748;
        margin-bottom: 0.5rem;
    }

    .feature-card p {
        color: #4a5568;
    }

    .cta-buttons {
        margin-top: 3rem;
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s ease;
    }

    .primary {
        background: #4f46e5;
        color: white;
    }

    .primary:hover {
        background: #4338ca;
    }

    .secondary {
        background: #e5e7eb;
        color: #1f2937;
    }

    .secondary:hover {
        background: #d1d5db;
    }
</style>